@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="container-dashboard">
	<div class="statistic">
		<h2>Tasks Completed for All Time</h2>
		<p>1000</p>
	</div>
	<div class="statistic">
		<h2>Most Productive Month</h2>
		<p>January 2023</p>
	</div>
	<div class="chart">
		<h2>Productivity Chart</h2>
		<div id="ch"></div>
	</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
    var options = {
        series: [
            {
                name: "High - 2023",
                data: [28, 29, 33]
            },
            {
                name: "Low - 2023",
                data: [12, 11, 14]
            }
        ],
        chart: {
            height: 350,
            type: 'line',
            dropShadow: {
                enabled: true,
                color: '#000',
                top: 18,
                left: 7,
                blur: 10,
                opacity: 0.2
            },
            toolbar: {
                show: false
            }
        },
        colors: ['#77B6EA', '#545454'],
        dataLabels: {
            enabled: true,
        },
        stroke: {
            curve: 'smooth'
        },
        title: {
            text: '',
            align: 'left'
        },
        grid: {
            borderColor: '#e7e7e7',
            row: {
                colors: ['#f3f3f3', 'transparent'], // takes an array which will be repeated on columns
                opacity: 0.5
            },
        },
        markers: {
            size: 1
        },
        xaxis: {
            categories: ['Jan', 'Feb', 'Mar' ],
            title: {
                text: ''
            }
        },
        yaxis: {
            title: {
                text: 'quantity'
            },
            min: 5,
            max: 40
        },
        legend: {
            position: 'top',
            horizontalAlign: 'right',
            floating: true,
            offsetY: -25,
            offsetX: -5
        }
    };

    var chart = new ApexCharts(document.querySelector("#ch"), options);
    chart.render();
</script>