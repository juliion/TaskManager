<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Tilt+Neon&display=swap" rel="stylesheet">
</head>
<body>
    <div class="header">
        <div class="logo">
            <img src="~/img/logo.png" alt="Task Manager Logo">
            <h1>Task Manager</h1>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <ul>
                <li class="user">@User.Identity.Name</li>
                <li><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                <li>
                    <form  class="logout" method="post" asp-controller="Account" asp-action="Logout">
                        <input type="submit" value="Log out" />
                    </form>
                </li>
            </ul>
        }
        else
        {
            <ul>
                <li><a asp-controller="Account" asp-action="Login">Log in</a></li>
                <li><a asp-controller="Account" asp-action="Register">Sign up</a></li>
            </ul>
        }
        
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
